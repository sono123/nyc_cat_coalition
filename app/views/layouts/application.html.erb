<!DOCTYPE html>
<html>
<head>
  <title>NycCatCoalition</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= google_webfonts_link_tag :roboto => [100, 300, 500, 700], :roboto_condensed => [100, 300, 500, 700], :roboto_slab => [100, 300, 400, 700] %>
</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header row">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			      <%= link_to(image_tag("nyccc-logo"), root_path, class: "navbar-brand logo_large hidden-xs") %>
			      <%= link_to(image_tag("nyccc-logo"), root_path, class: "navbar-brand logo_small visible-xs") %>
			      <%= link_to( "NYCCC", root_path, class: "navbar-brand visible-xs nyccc") %>
			  </div>

				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "Adopt", cats_path %></li>
						<li><%= link_to "Events", events_path %></li>
						<li><%= link_to "FAQ", faqs_path %></li>
						<li><%= link_to "About", '/about' %></li>
						<li><%= link_to "Contact", '/contact' %></li>
					</ul>
				</div>

			</div>
		</nav>

		<p class="notice devise"><%= notice %></p>
		<p class="alert devise"><%= alert %></p>

		<div class="container-fluid page-body">
		<%= yield %>
		</div>

		<footer class="footer">
	    <div id="footer-info" class="container">
				
				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 text-center">Petsmart, Port Chester, NY 10573</div>
					<div class="col-lg-4 col-md-4 col-sm-4 text-center">nycatcoal@yahoo.com</div>
					<div class="col-lg-4 col-md-4 col-sm-4 text-center">Phone: 1-718-671-1695</div>
				</div>
	    </div>
	  </footer>

	</body>
</html>
