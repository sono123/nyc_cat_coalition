<h1>Faqs#index</h1>
<p>Find me in app/views/faqs/index.html.erb</p>
<br>

<% if @faqs.count %>
	<% @faqs.each do |faq| %>
		<h3><%= faq.question %></h3>
		<p><%= faq.answer %></p>
		<%= link_to "Edit", edit_faq_path(faq) %>
		<%= link_to "Delete", faq_path(faq), method: :delete, data: { confirm: "Are you sure?" } %>
	<% end %>
<% end %>