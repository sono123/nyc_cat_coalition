<div class="event-title-div">
	<h2 class="event-title-h2"><%= @event.title %></h2>
</div>

<div class="event-p-div">
	<p class="event-description"><%= @event.description %></p>
</div>

<div class="event-date-map-div">
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 text-center">
			<i class="fa fa-calendar"></i>
			<p><%= date_formatter(@event.date) %></p>
		</div>

		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 text-center">
			<a href="https://goo.gl/maps/Z88n6DEnLsL2" target="_blank" class="google-maps-link">
				<i class="fa fa-map-marker"></i>
				<p><%= @event.location %></p>
			</a>
		</div>
	</div>
</div>


<%= link_to "Edit", edit_event_path(@event) %>
<%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure?" } %>