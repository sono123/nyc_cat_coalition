<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>

<% @events.each do |event| %>
	<h2><%= link_to event.title, event_path(event) %></h2>
	<p><%= event.description %></p>
	<%= link_to "Edit", edit_event_path(event) %>
	<%= link_to "Delete", event_path(event), method: :delete, data: { confirm: "Are you sure?" } %>
	<br>
	<br>
<% end %>

<br>
<br>

<h1>Upcoming Events</h1>

<% if @upcoming %>
	<% @upcoming.each do |event| %>
		<h2><%= event.title %></h2>
	<% end %>
<% end %>


<h1>Past Events</h1>

<% if @past %>
	<% @past.each do |event| %>
		<h2><%= event.title %></h2>
	<% end %>
<% end %>