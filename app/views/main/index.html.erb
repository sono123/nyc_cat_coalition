<h1>Some of Our Cats</h1>

<% @cats.each do |cat| %>
	<h3><%= link_to cat.name, cat_path(cat) %></h3>
	<%= link_to(image_tag(cat.pictures.first.image.url(:thumb)), cat_path(cat)) %>
<% end %>

<br>
<br>

<h1>Upcoming Events</h1>

<% @upcoming.each do |event| %>
	<h3><%= link_to event.title, event_path(event) %></h3>
	<p><%= event.description %></p>
	<p><%= event.date %></p>
	<br>
<% end %>