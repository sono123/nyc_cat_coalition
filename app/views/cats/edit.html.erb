<h1>Cats#edit</h1>
<p>Find me in app/views/cats/edit.html.erb</p>

<%= form_for @cat, html: { multipart: true } do |f| %>

  <% if @cat.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@cat.errors.count, "error") %> prohibited this todo_list from being saved:</h2>
      <ul>

        <% @cat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>

      </ul>
    </div>

  <% end %>

  <% if @cat.pictures.any? %>
  	<% @cat.pictures.each do |picture| %>
  		<%= image_tag picture.image.url(:medium) %>
      <%= picture.id %>
  		<%= link_to "Delete", "/cats/#{@cat.id}/pictures/#{picture.id}", method: :delete, data: { confirm: "Are you sure?" } %>
  		<br>
  		<br>
  	<% end %>
  <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>

    <%= f.label :pictures %>
    <%= file_field_tag "images[]", type: :file, multiple: true %>
    <br>

    <%= f.submit %>

<% end %>