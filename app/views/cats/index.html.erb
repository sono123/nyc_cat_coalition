
<div class="row">

	<% @cats.each do |cat| %>

		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 cats-divs">


			<%= link_to( image_tag(cat.pictures.first.image.url(:large), class: "cats-index-images"), cat_path(cat) ) %>
			<h3 class="cat-name-h1"><%= link_to cat.name, cat_path(cat) %></h3>
			<p class="cat-name-p"><%= cat.description %></p>
			<p class="cat-name-p"><%= cat.age %> Years old.</p>


		</div>


	<% end %>
	

</div>
